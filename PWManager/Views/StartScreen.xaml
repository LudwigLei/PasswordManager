<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="PWManager.StartScreen"
	x:Name="UserControl"
	d:DesignWidth="800" d:DesignHeight="600">

	<Grid x:Name="LayoutRoot">
		<Grid HorizontalAlignment="Left" Height="580" Margin="10,10,0,0" VerticalAlignment="Top" Width="780">
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition Width="150"/>
				<ColumnDefinition />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition Height="200"/>
				<RowDefinition />
			</Grid.RowDefinitions>
			<StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="200" Grid.Row="1" VerticalAlignment="Top" Width="150">
				<Button x:Name="NewUserBtn" Content="New User" Margin="0,10,0,10" Height="50" VerticalAlignment="Center" Click="NewUserBtn_Click"/>
				<Button x:Name="LoginBtn" Content="Login" Height="50" Margin="0,10,0,10" VerticalAlignment="Center" Click="LoginBtn_Click"/>
			</StackPanel>
		</Grid>
	</Grid>
</UserControl>